<div class="col-md-8 col-md-offset-2" >

  <div class="center jumbotron">
    <h1>Welcome! </h1>
    <p> Go ahead and sign in </p>
    <%= form_tag auth_path, method: :post do %>
      <div>
        <%= label_tag :username %>
        <%= text_field_tag :username, "", class: "form-control" %>
        <br>
      </div>

      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
        <br>

      <div>
        <%= submit_tag "Log In", class: "btn btn-primary btn-lg"%>
        <br>
        <br>
        <p>Still don't have an account? Whatcha waitin' for? <%=link_to 'Sign up now', signup_path %> </p>
      </div>

  </div>
</div>

    <% end %>
