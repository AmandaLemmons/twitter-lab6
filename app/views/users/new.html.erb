
<div class="col-sm-6 .col-md-2" id="frontpage" >

  <h1>Go on and sign up</h1>
    <h4> All the cool kids are doing it. </h4>



    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for @user do |f| %>
          <%= f.input :username%>
          <%= f.input :email%>
          <%= f.input :password %>
          <strong> *Confirm Password </strong>
          <%= f.input :password_confirmation, label: false %>
          <%= f.button :submit %>
          <%end%>
          <br>
          <br>
      </div>
</div>
</div>
